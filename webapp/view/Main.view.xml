<mvc:View controllerName="ui5training.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Table 
        id="ordersView"
        class="sapUiResponsiveMargin"
        width="auto" 
        items="{/Orders}"
        mode="MultiSelect">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer/>
                <SearchField
                    width="50%"
                    search=".onSearchOrders"/>
                <Button text="Create" press="onCreateItem" icon="sap-icon://add" />
                <Button text="Delete Selected" press="onDeleteItems" icon="sap-icon://delete" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column><Text text="Order ID"/></Column>
            <Column><Text text="Customer"/></Column>
            <Column><Text text="Employee"/></Column>
            <Column><Text text="Shipper"/></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{OrderID}"/>
                    <Text text="{Customer/CompanyName}"/>
                    <Text text="{Employee/LastName}"/>
                    <Text text="{Shipper/CompanyName}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
